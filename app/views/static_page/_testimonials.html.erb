<div class="container">
    <div class="row">
        <div class="col-sm-12 testimonials">
            <h3>Declarações de amizade!</h3>
            <div class="testimonial-active"></div>
            <% if @testimonials && @testimonials.size > 0 %>
                <div class="fb-like bottom20" data-href="<%= "#{request.original_url[0...-1]}/testimonials/#{@testimonials[0].id}" %>" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false"></div>
            <% end %>
            <div class="testimonial-quote">&ldquo; &rdquo;</div>

            <% Array.wrap(@testimonials).each do |testimonial| %>
                <div class="testimonial-single">
                    <p>
                        <%= testimonial.testimonial %>
                        <br />
                        <a href="<%= testimonial.profile %>"><%= testimonial.name %></a>
                    </p>
                    <div class='testimonial-single-image'>
                        <img src="<%= testimonial.picture %>" alt="" onclick="javascript:showSelectedTestimonial(event, this)">
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
